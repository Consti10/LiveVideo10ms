<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="constantin.video.example">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".GraphViewA"></activity>
        <activity android:name=".AColorFormatTester" />
        <activity android:name=".decodingperf.ViewBenchmarkDataActivity" />
        <activity android:name=".ATelemetryExample" />
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".decodingperf.VideoActivityWithDatabase"
            android:screenOrientation="landscape"
            android:theme="@style/MyStyleFullscreen" />
    </application>

</manifest>